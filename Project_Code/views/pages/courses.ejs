<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main style="background-color: rgba(255, 255, 128, .5);">
    
  <div class="container">
    <br>
    <h1>Hello, <%= username %></h1>
    <br>
    <table class="table">
      <tr>
        <th>COURSE ID</th>
        <th>COURSE NAME</th>
        <th>CREDIT HOURS</th>
        <th>ACTION</th>
      </tr>
      <tr>
        
          <form action="/courses/addnew" method="POST">
            <td><input type = "text" placeholder="Ex) CSCI" maxlength="4" id="prefix" name="prefix"><input type="number" placeholder="Ex) 1234" maxlength="4" id="id" name="id"></td>
        <td><input type="text" id="name" name="name"></td>
        <td><input type="number" id ="hours" name="hours"></td>
          <input type="hidden" name="course_infonew[]">
          <input type="hidden" name="course_infonew[]">
          <input type="hidden" name="course_infonew[]">
          <input type="hidden" name="course_infonew[]">
          <td><button type="submit" class="btn btn-outline-success" value ="save">ADD</button></td>
          
          </form>
        </td>
      </tr>
      <% for(var i = 0; i < courses.length; i++) { %>
        <tr>
          <td><%= courses[i].course_prefix + courses[i].course_id %></td>
          <td><%= courses[i].course_name %></td>
          <td><%= courses[i].credit_hours %></td>
          <!-- add course button -->
          <td>
            <form action="/courses/add" method="POST">
            <input type="hidden" name="course_info[]" value="<%= courses[i].course_prefix %>">
            <input type="hidden" name="course_info[]" value="<%= courses[i].course_id %>">
            <button type="submit" class="btn btn-outline-success">ADD</button>
            </form>
          </td>
        </tr>
      <% } %>
    </table>    
  </div>

</main>

<%- include ('../partials/footer') %>