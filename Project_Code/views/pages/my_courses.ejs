<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main style="background-color: rgba(255, 255, 128, .5);">
    
    <div class="container">
      <br>
      <h1>Hello, <%= username %></h1>
      <br>
      <table class="table">
        <tr>
          <th>COURSE ID</th>
          <th>COURSE NAME</th>
          <th>CREDIT HOURS</th>
          <th>ACTION</th>
        </tr>
        <% for(var i = 0; i < courses.length; i++) { %>
          <tr>
            <td><%= courses[i].course_prefix + courses[i].course_id %></td>
            <td><%= courses[i].course_name %></td>
            <td><%= courses[i].credit_hours %></td>
            <!-- add course button -->
            <td>
              <form action="/courses/delete" method="POST">
              <input type="hidden" name="course_info[]" value="<%= courses[i].course_prefix %>">
              <input type="hidden" name="course_info[]" value="<%= courses[i].course_id %>">
              <button type="submit" class="btn btn-outline-danger">DELETE</button>
              </form>
            </td>
          </tr>
        <% } %>
      </table>    
    </div>

</main>

<%- include ('../partials/footer') %>